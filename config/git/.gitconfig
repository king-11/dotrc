[alias]
	co = checkout
	cp = cherry-pick
	ci = commit -s
	ca = commit -v --amend
  bv = branch -v
	bd = branch -D
	lg = log --graph
	ol = log --pretty=oneline --decorate
	ad = add -p
	aa = add .
	dfs = diff --staged
	df = diff
	last = log -1 HEAD
	plu = pull upstream
  plo = pull origin --rebase=merges
	ra = rebase --abort
	rc = rebase --continue
	pof = push origin --force-with-lease
	puf = push upstream --force-with-lease
	po = push origin
	pu = push upstream
	rs = reset
	rhh = reset --hard HEAD
  rh = reset --hard
	s = status -s
  st = stash
  sta = stash --include-untracked
  std = stash drop
  stl = stash list
  stp = stash pop
[branch]
  sort = -committerdate
[color]
	ui = auto
[commit]
	template = ~/projects/dotrc/config/git/gitmessage
	gpgsign = true
[diff]
	external = difft
  algorithm = histogram
[fetch]
  prune = true
  prunetags = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[help]
	autocorrect = 100
[init]
	defaultBranch = main
[log]
  date = iso
[merge]
  conflictstyle = zdiff3
  tool = meld
[pull]
	rebase = true
[push]
  default = current
[rebase]
  autostash = true
[rerere]
  enabled = true
[submodule]
	recurse = true
